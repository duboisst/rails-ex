<h1>Editing contact</h1>

<%= form_for @contact, :url=> {:action=>:update, :id=>@contact.id} do |f| %>
  <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize @contact.errors.count, "erreur", "erreurs" %> :</h2>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </div>
  <% end %>

  <p>
    <%= f.label 'Nom' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label 'Tel'%><br />
    <%= f.text_field :tel %>
  </p>
  <p>
    <%= f.label 'Adresse' %><br />
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label 'Information' %><br />
    <%= f.text_area :info %>
  </p>
  <p>
    <%= f.submit "Enregistrer" %>
  </p>
<% end %>

<%= link_to 'Afficher', {:action=>:show, :id=>@contact.id} %> |
<%= link_to 'Retour', '/admin/contacts' %>
