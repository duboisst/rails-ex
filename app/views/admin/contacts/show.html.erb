<p>
  <b>Nom:</b>
  <%=h @contact.name %>
</p>

<p>
  <b>Tel:</b>
  <%=h @contact.tel %>
</p>

<p>
  <b>Adresse:</b>
  <%=(h @contact.address).gsub(/\n/,'<br />').html_safe %>
</p>

<p>
  <b>Information:</b>
  <%=(h @contact.info).gsub(/\n/,'<br />').html_safe %>
</p>


<%= link_to 'Modifier', edit_admin_contact_path(@contact) %> |
<%= link_to 'Retour', '/admin/contacts' %>
